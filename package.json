{
  "name": "draft-tracker",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "update-data": "node scripts/parse-fantrax-csv.cjs",
    "dev": "vite",
    "build": "vite build",
    "lint": "eslint .",
    "preview": "vite preview",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "test:unit": "vitest --coverage src/__tests__/utils/** src/__tests__/hooks/**",
    "test:component": "vitest --coverage src/__tests__/components/**",
    "test:integration": "vitest --coverage src/__tests__/integration/**",
    "test:e2e": "playwright test",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:debug": "playwright test --debug",
    "test:all": "npm run test:unit && npm run test:component && npm run test:integration",
    "test:ci": "vitest run --coverage --reporter=basic --reporter=junit",
    "test:performance": "vitest run --coverage src/**/__tests__/performance",
    "coverage:open": "open coverage/index.html",
    "coverage:serve": "python -m http.server 8080 -d coverage"
  },
  "dependencies": {
    "lucide-react": "^0.525.0",
    "react": "^19.1.0",
    "react-dom": "^19.1.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.30.1",
    "@playwright/test": "^1.54.1",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "@vitejs/plugin-react": "^4.6.0",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "autoprefixer": "^10.4.21",
    "eslint": "^9.30.1",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "globals": "^16.3.0",
    "jsdom": "^26.1.0",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.11",
    "vite": "^7.0.4",
    "vitest": "^3.2.4"
  }
}
